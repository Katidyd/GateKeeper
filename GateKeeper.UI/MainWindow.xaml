<Window x:Class="GateKeeper.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GateKeeper.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
            <RowDefinition Height="28"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4">Current Shift</Label>
        <Button Grid.Column="1" Grid.Row="1" x:Name="minusAdultOvernightAction" Click="PerformRemoveAdultOvernight">-</Button>
        <Button x:Name="plusAdultOvernightAction" Grid.Column="3" Grid.Row="1" Click="PerformAddAdultOvernight">+</Button>
        <Button x:Name="minusMemberOvernightAction" Grid.Column="1" Grid.Row="2" Click="PerformMinusMemberOvernight">-</Button>
        <Button x:Name="plusMemberOvernightAction" Grid.Column="3" Grid.Row="2" Click="PerformAddMemberOvernight">+</Button>
        <Button x:Name="minusYouthOvernightAction" Grid.Column="1" Grid.Row="3" Click="PerformMinusYouthOvernightAction">-</Button>
        <Button x:Name="plusYouthOvernightAction" Grid.Column="3" Grid.Row="3" Click="PerformAddYouthOvernightAction">+</Button>
        <Button x:Name="minusChildOvernightAction" Grid.Column="1" Grid.Row="4">-</Button>
        <Button x:Name="plusChildOvernightAction" Grid.Column="3" Grid.Row="4">+</Button>
        <Button x:Name="minusUnder6OvernightAction" Grid.Column="1" Grid.Row="5">-</Button>
        <Button x:Name="plusUnder6OvernightAction" Grid.Column="3" Grid.Row="5">+</Button>
        <Button x:Name="minusAdultDaytripAction" Grid.Column="1" Grid.Row="6">-</Button>
        <Button x:Name="plusAdultDaytripAction" Grid.Column="3" Grid.Row="6">+</Button>
        <Button x:Name="minusMemberDaytripAction" Grid.Column="1" Grid.Row="7">-</Button>
        <Button x:Name="plusMemberDaytripAction" Grid.Column="3" Grid.Row="7">+</Button>
        <Button x:Name="minusYouthDaytripAction" Grid.Column="1" Grid.Row="8" Height="29" VerticalAlignment="Top">-</Button>
        <Button x:Name="plusYouthDaytripAction" Grid.Column="3" Grid.Row="8">+</Button>
        <Button x:Name="minusChildDaytripAction" Grid.Column="1" Grid.Row="9">-</Button>
        <Button x:Name="plusChildDaytripAction" Grid.Column="3" Grid.Row="9">+</Button>
        <Button x:Name="minusUnder6DaytripAction" Grid.Column="1" Grid.Row="10">-</Button>
        <Button x:Name="plusUnder6DaytripAction" Grid.Column="3" Grid.Row="10">+</Button>
        <Button x:Name="minusDaytripConversion" Grid.Column="1" Grid.Row="11">-</Button>
        <Button x:Name="plusDaytripConversionAction" Grid.Column="3" Grid.Row="11">+</Button>
        <Button x:Name="minusLocalAction" Grid.Column="1" Grid.Row="12">-</Button>
        <Button x:Name="plusLocalAction" Grid.Column="3" Grid.Row="12">+</Button>
        <Button x:Name="minusCompAction" Grid.Column="1" Grid.Row="13">-</Button>
        <Button x:Name="plusCompAction" Grid.Column="3" Grid.Row="13">+</Button>
        <Button x:Name="minusOtherAction" Grid.Column="1" Grid.Row="14">-</Button>
        <Button x:Name="plusOtherAction" Grid.Column="3" Grid.Row="14">+</Button>
        <Label Grid.Column="0" Grid.Row="1" >Adult Overnight</Label>
        <Label Grid.Column="0" Grid.Row="2" >Member Overnight</Label>
        <Label Grid.Column="0" Grid.Row="3" >Youth (13-17) Overnight</Label>
        <Label Grid.Column="0" Grid.Row="4" >Child  (6-12) Overnight</Label>
        <Label Grid.Column="0" Grid.Row="5" >Child  (0-5) Overnight</Label>
        <Label Grid.Column="0" Grid.Row="6" >Adult Daytrip</Label>
        <Label Grid.Column="0" Grid.Row="7" >Member Daytrip</Label>
        <Label Grid.Column="0" Grid.Row="8" >Youth (13-17) Daytrip</Label>
        <Label Grid.Column="0" Grid.Row="9" >Child (6-12) Daytrip</Label>
        <Label Grid.Column="0" Grid.Row="10" >Child (0-5) Daytrip</Label>
        <Label Grid.Column="0" Grid.Row="11" >Daytrip Conversion</Label>
        <Label Grid.Column="0" Grid.Row="12" >Local</Label>
        <Label Grid.Column="0" Grid.Row="13" >Comp</Label>
        <Label Grid.Column="0" Grid.Row="14" >Other</Label>
        <Label Name="adultOvernightDisplay" Grid.Column="2" Grid.Row="1" ></Label>
        <Label x:Name="memberOvernightDisplay" Grid.Column="2" Grid.Row="2" ></Label>
        <Label x:Name="youthOvernightDisplay" Grid.Column="2" Grid.Row="3" ></Label>
        <Label x:Name="childOvernightDisplay" Grid.Column="2" Grid.Row="4" ></Label>
        <Label x:Name="under6OvernightDisplay" Grid.Column="2" Grid.Row="5" ></Label>
        <Label x:Name="adultDaytripDisplay" Grid.Column="2" Grid.Row="6" ></Label>
        <Label x:Name="memberDaytripDisplay" Grid.Column="2" Grid.Row="7" ></Label>
        <Label x:Name="youthDaytripDisplay" Grid.Column="2" Grid.Row="8" ></Label>
        <Label x:Name="childDaytripDisplay" Grid.Column="2" Grid.Row="9" ></Label>
        <Label x:Name="under6DaytripDisplay" Grid.Column="2" Grid.Row="10" ></Label>
        <Label x:Name="daytripConversionDisplay" Grid.Column="2" Grid.Row="11" ></Label>
        <Label x:Name="localDisplay" Grid.Column="2" Grid.Row="12" ></Label>
        <Label x:Name="compDisplay" Grid.Column="2" Grid.Row="13" ></Label>
        <Label x:Name="otherDisplay" Grid.Column="2" Grid.Row="14" ></Label>
    </Grid>
</Window>
